<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
            x:Class="MagazinGsm.Principala">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="60" Spacing="40">
    <Button x:Name="ReadFurnizor" Text="Furnizori" Clicked="viewFurnizor"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#E0FFCD" 
                    TextColor="DarkGreen"
                    FontSize="Large"
                    CornerRadius="20"
                    BorderColor="DarkGreen"
                    BorderWidth="1"/>
    <Button x:Name="citesteClient" Text="Clienti" Clicked="viewClient"
                    HorizontalOptions="FillAndExpand"
                    BackgroundColor="#E0FFCD" 
                    TextColor="DarkGreen" 
                    FontSize="Large"
                    CornerRadius="20"
                    BorderColor="DarkGreen"
                    BorderWidth="1"/>


    </StackLayout>
    </ContentPage.Content>
</ContentPage>
